<mapper namespace="com.peng.main.provider.mapper.mapper.BaseRoleModuleMapper" >
  <resultMap id="BaseResultMap" type="com.peng.main.api.mapper.model.BaseRoleModule" >
    <!--
      WARNING - @mbggenerated
    -->
    <id column="ID" property="id" jdbcType="BIGINT" />
    <result column="ROLE_ID" property="roleId" jdbcType="BIGINT" />
    <result column="MODULE_ID" property="moduleId" jdbcType="BIGINT" />
  </resultMap>

  <select id="selectLeafRoleModule" resultMap="BaseResultMap">
    SELECT * FROM base_role_module brm WHERE brm.ROLE_ID = #{roleId} AND
    (SELECT count(0) FROM base_module_resources bms WHERE bms.parent_id = brm.module_id) = 0
  </select>
